@{
}


@model VentasApp.Models.Pedido;
<div class="row">
    <div class="col-sa-8 offset-sn-2">
        <h2>Nuevo Pedido</h2>
        <form asp-controller="Pedido" asp-action="Nuevo" method="post">
            <div class="mb-3">
                <label>Id del Pedido</label>
                <input class="form-control" asp-for="IdPedido" type="int" />

            </div>
            <div class="mb-3">
                <label>Id del Cliente</label>
                <input class="form-control" asp-for="ClienteId" type="int" />

            </div>
            <div class="mb-3">
                <label>Fecha del Pedido</label>
                <input class="form-control" asp-for="FechaPedido" type="datetime" />

            </div>

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar Pedido Nuevo</button>
                <a asp-controller="Pedido" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>

        </form>

    </div>

</div>