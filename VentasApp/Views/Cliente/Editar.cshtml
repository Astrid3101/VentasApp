@{
}
@model VentasApp.Models.Cliente;
<div class="row">
    <div class="col-sa-8 offset-sn-2">
        <h2>Editar Cliente</h2>
        <form asp-controller="Cliente" asp-action="Editar" method="post">
            <input asp-for="Id" type="hidden"/>
            <div class="mb-3">
                <label>Nombre Completo</label>
                <input class="form-control" asp-for="Nombre" type="text" />

            </div>
            <div class="mb-3">
                <label>Dirección</label>
                <input class="form-control" asp-for="Direccion" type="text" />

            </div>
            <div class="mb-3">
                <label>Telefono</label>
                <input class="form-control" asp-for="Telefono" type="text" />

            </div>
            <div class="mb-3">
                <label>Email</label>
                <input class="form-control" asp-for="Email" type="text" />

            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar Cliente</button>
                <a asp-controller="Cliente" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>

        </form>

    </div>

</div>

