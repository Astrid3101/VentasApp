@{
}

<!--Para resivir el modelo en la vista-->
@model List<VentasApp.Models.Cliente>;
<div class="row">
    <div class="col-sa-8 offset-sn-2">
        <h2>Lista de Clientes</h2>
        <a asp-controller="Cliente" asp-action="Nuevo" class="btn btn-success mb-3">Nuevo Cliente</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Telefono</th>
                    <th>Email</th>
                </tr>

            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Direccion</td
                        <td>@item.Telefono</td>
                        <td>@item.Email</td>
                        <td>
                            <a asp-controller="Cliente" 
                              asp-action="Editar" 
                              asp-route-id="@item.Id"
                            class="btn btn-primary mb-3">Editar 
                            Cliente</a>

                            <a asp-controller="Cliente" 
                              asp-action="Eliminar" 
                              asp-route-id="@item.Id"
                              onclick="return confirmar()"
                            class="btn btn-danger mb-3">Eliminar 
                            Cliente</a>
         
                        </td>
                       
                    </tr>
                }

            </tbody>

        </table>

    </div>

</div>

@section Scripts{
    <script>
        function confirmar(){
            return confirm("Estas seguro de eliminar el cliente?")
        }
    </script>
}
